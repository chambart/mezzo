data option a =
  | None
  | Some { contents: a }

val none : [a] option a =
  None

val some [a] (consumes x: a): option a =
  Some { contents = x }

val force [a] (consumes o: option a) : a =
  match o with
  | Some ->
      o.contents
  | None ->
      fail
  end

