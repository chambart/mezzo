(* Standard types *)

data option a = None | Some { contents: a }

data choice a b =
  | Left  { contents: a }
  | Right { contents: b }

(* Standard types *)

val none =
  None

val some [a] (consumes x: a): option a =
  Some { contents = x }

(* Arithmetic *)

val max (x: int, y: int) : int =
  if x <= y then y else x

val min (x: int, y: int) : int =
  if x <= y then x else y

