abstract int
fact duplicable int

exclusive data xlist a =
  | XNil
  | XCons { xhead: a; xtail: xlist a }

data list a =
  | Nil
  | Cons { head: a; tail: list a }

exclusive data ref a = Ref {
  contents: a;
}

data option a = None | Some { contents: a }

data bool = True | False

val cref [a] (consumes x: a): ref a =
  Ref { contents = x }

val rget [a] (consumes x: ref a): (a | x @ ref unknown) =
  x.contents

val rset [a, b] (consumes x: ref a, consumes c: b): ( | x @ ref b) =
  x.contents <- c

val (nil: [a] list a) =
  Nil

val cons [a] (consumes hd: a, consumes tl: list a): list a =
  Cons { head = hd; tail = tl }

val none =
  None

val some [a] (consumes x: a): option a =
  Some { contents = x }

val true = True
val false = False
